<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Login Suite" parallel="methods" thread-count="4">
    <test name="Login Tests">
        <groups>
            <run>
                <include name="login"/>
                <exclude name="deprecated"/>
            </run>
        </groups>
        
        <packages>
            <package name="tests.*"/>
        </packages>
    </test>
</suite>
